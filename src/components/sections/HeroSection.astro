<section class="relative h-screen w-full overflow-hidden">
  <!-- Background Planet Effect -->
  <div id="planetcont" class='animate absolute inset-0 top-1/4 overflow-hidden'>
    <div id="crescent" class='absolute top-0 left-1/2 -translate-x-1/2 w-[250vw] min-h-[100vh] aspect-square rounded-full p-[1px] bg-gradient-to-b from-black/25 dark:from-white/75 from-0% to-transparent to-5%'>
      <div id="planet" class='w-full h-full bg-white dark:bg-black rounded-full p-[1px] overflow-hidden flex justify-center'>
        <div id="blur" class='w-full h-20 rounded-full bg-neutral-900/25 dark:bg-white/25 blur-3xl'/>
      </div>
    </div>
  </div>

  <!-- Hero Content -->
  <div class="animate absolute h-full w-full flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class='relative w-full h-full flex items-center justify-center'>
      <div class='text-center max-w-6xl'>
        <!-- Greeting -->
        <p class='animated text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl font-semibold opacity-75 mb-2 sm:mb-3 lg:mb-4'>
          Hello, I'm
        </p>
        
        <!-- Name -->
        <h1 class='animated text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-bold text-black dark:text-white mb-3 sm:mb-4 lg:mb-6'>
          Rizky Eka Haryadi
        </h1>
        
        <!-- Role -->
        <p class='animated text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl opacity-90 mb-2 sm:mb-3 lg:mb-4'>
          Mobile Developer & Data Analyst
        </p>
        
        <!-- Description -->
        <p class='animated text-sm sm:text-base md:text-lg lg:text-xl opacity-75 max-w-4xl mx-auto mb-6 sm:mb-8 lg:mb-10 px-4'>
          Crafting innovative mobile solutions and extracting insights from data to drive business growth
        </p>
        
        <!-- CTA Buttons -->
        <div id="ctaButtons" class='animated flex flex-col sm:flex-row gap-3 sm:gap-4 lg:gap-6 justify-center items-center max-w-3xl mx-auto px-4'>
          <a 
            href='/work' 
            class='w-full sm:w-auto py-3 sm:py-3 lg:py-4 px-6 sm:px-6 lg:px-8 rounded-lg text-sm sm:text-base lg:text-lg bg-black dark:bg-white text-white dark:text-black hover:bg-black/80 dark:hover:bg-white/90 transition-all duration-300 hover:scale-105 font-medium text-center'
          >
            View My Work
          </a>
          <a 
            href='/contact' 
            class='w-full sm:w-auto py-3 sm:py-3 lg:py-4 px-6 sm:px-6 lg:px-8 rounded-lg text-sm sm:text-base lg:text-lg border border-black/25 dark:border-white/25 hover:bg-black/5 hover:dark:bg-white/15 transition-all duration-300 hover:scale-105 font-medium text-center'
          >
            Get In Touch
          </a>
          <a 
            href='/resume.pdf' 
            target="_blank" 
            class='w-full sm:w-auto py-3 sm:py-3 lg:py-4 px-6 sm:px-6 lg:px-8 rounded-lg text-sm sm:text-base lg:text-lg border border-black/25 dark:border-white/25 hover:bg-black/5 hover:dark:bg-white/15 transition-all duration-300 hover:scale-105 font-medium text-center'
          >
            Download CV
          </a>
        </div>
      </div>
    </div>
  </div>
</section>