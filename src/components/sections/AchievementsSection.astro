---
import { getLatestAchievements } from "@/lib/data";
import AchievementSlider from "@/components/ui/AchievementSlider";
import type { CollectionEntry } from 'astro:content';

const achievements: CollectionEntry<'achievement'>[] = await getLatestAchievements(5); // Get latest 5 achievements
---


<section class="animate">
  <div class="text-center mb-10">
    <h2
      class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-gray-900 via-purple-900 to-gray-900 dark:from-white dark:via-purple-300 dark:to-white bg-clip-text text-transparent">
      Certifications & Achievements
    </h2>
    <div
      class="w-20 h-1 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full">
    </div>
  </div>
  <AchievementSlider achievements={achievements.map(ach => ach.data)} client:load />

  <div class="flex justify-center mt-8">
    <a href="/achievements"
      class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
      View All Achievements
      <svg xmlns="http://www.w3.org/2000/svg" class="ml-3 -mr-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</section>
