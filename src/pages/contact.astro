---
import PageLayout from "../layouts/PageLayout.astro";
import Container from "@components/ui/Container.astro";
import { SOCIALS } from "src/consts";
import { Github, Linkedin, Instagram } from "lucide-astro";
---

<PageLayout title="Contact">
  <Container size="md">
    <div class="py-24">
      <h1 class="text-4xl font-bold mb-8">Contact Me</h1>

      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-semibold mb-4">Get in Touch</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            Feel free to reach out if you're looking for a developer, have a
            question, or just want to connect.
          </p>

          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <svg
                class="size-5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2">
                <path
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <a
                href="mailto:your.email@example.com"
                class="hover:text-black dark:hover:text-white transition-colors">
                your.email@example.com
              </a>
            </div>

            <div class="flex items-center gap-3">
              <svg
                class="size-5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2">
                <path
                  d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"
                ></path>
              </svg>
              <a
                href="tel:+1234567890"
                class="hover:text-black dark:hover:text-white transition-colors">
                +1 (234) 567-890
              </a>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="flex gap-4 mt-6">
            {
              SOCIALS.filter((social) =>
                ["GitHub", "LinkedIn", "Instagram"].includes(social.NAME)
              ).map((social) => (
                <a
                  href={social.HREF}
                  class="hover:text-gray-400"
                  aria-label={social.NAME}
                  target="_blank"
                  rel="noopener noreferrer">
                  {social.NAME === "GitHub" && <Github class="w-6 h-6" />}
                  {social.NAME === "LinkedIn" && <Linkedin class="w-6 h-6" />}
                  {social.NAME === "Instagram" && <Instagram class="w-6 h-6" />}
                </a>
              ))
            }
          </div>
          <!-- End Social Media Links -->
        </div>

        <form class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium mb-1">Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-black dark:focus:ring-white focus:border-transparent"
              required
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium mb-1"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-black dark:focus:ring-white focus:border-transparent"
              required
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium mb-1"
              >Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-black dark:focus:ring-white focus:border-transparent"
              required></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-6 py-3 rounded-lg bg-black dark:bg-white text-white dark:text-black font-medium hover:bg-black/90 dark:hover:bg-white/90 transition-colors">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </Container>
</PageLayout>
